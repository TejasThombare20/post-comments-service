# =============================================================================
# Post-Comments Service Environment Configuration
# =============================================================================
# Copy this file to .env and update the values according to your environment
# Required variables are marked with (REQUIRED)
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=post_comments_db
DB_SSLMODE=disable

# Database Connection Pool Settings
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=8080
ENVIRONMENT=development
LOG_LEVEL=info
DEBUG=true

# Server Timeouts
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_IDLE_TIMEOUT=60s

# =============================================================================
# JWT CONFIGURATION (REQUIRED)
# =============================================================================
# IMPORTANT: Change this to a secure random string of at least 32 characters
# You can generate one using: openssl rand -base64 32
JWT_SECRET_KEY=your-super-secret-jwt-key-that-is-at-least-32-characters-long

# Token Durations
JWT_ACCESS_TOKEN_DURATION=15m
JWT_REFRESH_TOKEN_DURATION=168h

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization,X-User-ID

# =============================================================================
# REDIS CONFIGURATION (Optional - for future caching)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=post-comments-service
APP_VERSION=1.0.0

# Pagination Defaults
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# File Upload Settings (for future avatar uploads)
MAX_UPLOAD_SIZE=5MB
UPLOAD_PATH=./uploads

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate Limiting (requests per minute)
RATE_LIMIT=100

# Password Requirements
MIN_PASSWORD_LENGTH=8

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Enable request logging
ENABLE_REQUEST_LOGGING=true

# Enable metrics collection
ENABLE_METRICS=false

# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Enable development features
ENABLE_SWAGGER=true
ENABLE_PROFILER=false

# Hot reload for development (requires air)
ENABLE_HOT_RELOAD=false

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# For production deployment, override these values:
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=warn
# CORS_ALLOWED_ORIGINS=https://yourdomain.com
# JWT_SECRET_KEY=<generate-a-secure-random-key>
# DB_SSLMODE=require
# ENABLE_REQUEST_LOGGING=false
# ENABLE_SWAGGER=false 